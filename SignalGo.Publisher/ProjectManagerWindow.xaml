<Window x:Class="SignalGo.Publisher.ProjectManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignalGo.Publisher"
        xmlns:vm="clr-namespace:SignalGo.Publisher.ViewModels"
        mc:Ignorable="d"
        Title="ProjectManagerWindow" Height="560" Width="1100" Background="White">

    <Window.DataContext>
        <vm:ProjectManagerWindowViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding AddNewProjectCommand}" Content="Add new project" Padding="15,10,15,10" Margin="0,0,0,10"/>
            <Button Command="{Binding ShowServersCommand}" Content="Servers" Padding="15,10,15,10" Margin="0,0,0,10"/>
            <!--<Button Command="{Binding AddNewServerCommand}" Content="Add new server" Padding="15,5,15,5" Margin="0,0,0,10"/>-->
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding CurrentSettingInfo.ProjectInfo}" SelectedItem="{Binding SelectedProjectInfo}" HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Background="DarkGray" Padding="5" Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Frame Width="800" Height="450" x:Name="mainframe" Grid.Column="1" Grid.Row="1" JournalOwnership="OwnsJournal" Loaded="Frame_Loaded" ClipToBounds="True" Background="#f6f6f7" Navigating="MainFrame_Navigating" NavigationUIVisibility="Hidden"/>
    </Grid>

</Window>
